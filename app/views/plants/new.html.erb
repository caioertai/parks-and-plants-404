<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h1>Add plant to <%= @garden.name %></h1>

      <%= simple_form_for [@garden, @plant] do |f| %>
        <%= f.input :name %>
        <%= f.input :image_url %>
        <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
